generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @unique @default(autoincrement())
  username   String
  login      String
  password   String
  is_active  Boolean
  created_at DateTime @default(now()) @db.Timestamp(3)
  updated_at DateTime @default(now()) @updatedAt @db.Timestamp(3)
  todos      Todo[]
}

model Category {
  id          Int      @id @unique @default(autoincrement())
  description String
  created_at  DateTime @default(now()) @db.Timestamp(3)
  updated_at  DateTime @default(now()) @updatedAt @db.Timestamp(3)
  todos       Todo[]
}

model Todo {
  id         Int      @id @unique @default(autoincrement())
  title      String
  body       String
  created_at DateTime @default(now()) @db.Timestamp(1)
  updated_at DateTime @default(now()) @updatedAt @db.Timestamp(1)
  is_done    Boolean

  category    Category @relation(fields: [category_id], references: [id])
  category_id Int

  user    User @relation(fields: [user_id], references: [id])
  user_id Int
}
